# Environment variables for Docker deployment
# Copy to .env and update with your values

# GPU Configuration
CUDA_VISIBLE_DEVICES=0

# Experiment Configuration
EXPERIMENT_NAME=exp1_sim2real
BATCH_SIZE=32
LEARNING_RATE=0.001
EPOCHS=50

# Weights & Biases (optional)
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=wifi-csi-har
WANDB_ENTITY=your_entity

# Database (optional)
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_USER=csi_user
POSTGRES_DB=experiments

# Paths (relative to docker-compose.yml)
DATA_PATH=../../data
RESULTS_PATH=../../results
CHECKPOINTS_PATH=../../checkpoints
LOGS_PATH=./logs

# Resource Limits
MEMORY_LIMIT=16G
CPU_LIMIT=4.0

# Jupyter Configuration
JUPYTER_TOKEN=
JUPYTER_PASSWORD=

# TensorBoard Configuration
TENSORBOARD_RELOAD_INTERVAL=10

# Redis Configuration (optional)
REDIS_PASSWORD=