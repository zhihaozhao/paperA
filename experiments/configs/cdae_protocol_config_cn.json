{
  "协议名称": "CDAE协议 - 跨域适应评估",
  "协议版本": "v2.0-cn", 
  "描述": "通过LOSO和LORO协议评估模型的跨受试者和跨环境泛化能力",
  
  "跨域设置": {
    "执行LOSO": true,
    "执行LORO": true,
    "LOSO受试者列表": [1, 2, 3, 4, 5, 6, 7, 8],
    "LORO房间列表": [1, 2, 3, 4, 5],
    "域标识": {
      "受试者属性": ["年龄", "性别", "身高", "体重"],
      "房间属性": ["大小", "家具", "布局", "材质"]
    }
  },
  
  "数据划分": {
    "LOSO划分原则": "严格按受试者ID分离，避免数据泄漏",
    "LORO划分原则": "严格按房间ID分离，固定受试者",
    "验证集比例": 0.2,
    "测试集比例": 0.2,
    "时间窗口": 100,
    "重叠率": 0.5
  },
  
  "模型配置": {
    "主测试模型": "Enhanced",
    "对比基线": ["CNN", "BiLSTM", "Conformer"],
    "参数容量匹配": "±10%参数范围",
    "初始化策略": "Xavier uniform",
    "批归一化": true
  },
  
  "训练协议": {
    "批次大小": 64,
    "学习率": 1e-3,
    "优化器": "Adam",
    "学习率调度": {
      "策略": "余弦退火",
      "最小学习率": 1e-6,
      "预热轮次": 10
    },
    "最大轮次": 150,
    "早停耐心": 25,
    "梯度裁剪": 1.0
  },
  
  "评估指标": {
    "主要指标": ["宏平均F1", "准确率", "ECE", "Brier分数"],
    "分类指标": ["精确率", "召回率", "F1分数"],
    "校准指标": ["ECE", "MCE", "Brier", "可靠性曲线"],
    "统计检验": ["配对t检验", "Wilcoxon符号秩检验", "Cohen's d"]
  },
  
  "验收标准": {
    "Enhanced模型要求": {
      "LOSO_F1": "≥0.83",
      "LORO_F1": "≥0.83", 
      "一致性检查": "LOSO与LORO差异 < 1%",
      "稳定性要求": "标准差 < 0.005"
    },
    "跨域泛化": {
      "统计显著性": "p < 0.05",
      "效应量": "Cohen's d > 0.5",
      "置信区间": "95% CI不包含0"
    },
    "校准性能": {
      "ECE阈值": "< 0.05",
      "Brier阈值": "< 0.15",
      "可靠性": "对角线偏差 < 10%"
    }
  },
  
  "置信度区间": {
    "Bootstrap重采样": 1000,
    "置信水平": 0.95,
    "偏差校正": "BCa方法",
    "并行计算": true
  },
  
  "结果输出": {
    "详细日志": true,
    "性能曲线": true,
    "注意力可视化": true,
    "统计报告": true,
    "LaTeX表格": true,
    "输出目录": "experiments/results/cdae_protocol/"
  },
  
  "实验管理": {
    "检查点保存": "每10轮次",
    "实验标记": "时间戳 + Git提交号",
    "版本控制": "自动创建实验分支",
    "资源监控": true,
    "异常处理": "自动重试3次"
  },
  
  "数据质量控制": {
    "数据完整性": "MD5校验",
    "标签一致性": "交叉验证",
    "异常值检测": "IQR方法",
    "数据泄漏检测": "时间戳检查"
  },
  
  "硬件要求": {
    "最小GPU内存_GB": 8,
    "推荐GPU内存_GB": 16,
    "CPU核心数": "≥8",
    "内存大小_GB": "≥32",
    "存储空间_GB": "≥50"
  }
}