{
  "协议名称": "D2协议 - 合成数据鲁棒性验证",
  "协议版本": "v2.0-cn",
  "描述": "通过540种配置组合验证合成数据生成器的有效性和模型鲁棒性",
  
  "实验设置": {
    "测试模型列表": ["Enhanced", "CNN", "BiLSTM", "Conformer"],
    "随机种子列表": [42, 123, 456, 789, 1024, 2048, 4096, 8192],
    "重复实验次数": 8,
    "并行进程数": 4
  },
  
  "数据配置": {
    "合成数据根目录": "data/synthetic/",
    "数据文件格式": ".npy",
    "序列长度": 100,
    "CSI维度": [114, 3, 3],
    "活动类别": ["坐立", "站立", "行走", "跌倒"]
  },
  
  "信号参数扫描": {
    "信噪比_dB": [5, 10, 15, 20, 25, 30],
    "多径数量": [3, 5, 8, 12, 15],
    "载波频率偏移_Hz": [-50, -25, 0, 25, 50],
    "相位噪声_rad": [0.01, 0.05, 0.1, 0.2]
  },
  
  "活动参数扫描": {
    "活动重叠度": [0.0, 0.1, 0.3, 0.5, 0.7],
    "动作幅度_m": [0.5, 1.0, 1.5, 2.0],
    "持续时间_s": [2, 5, 10, 15]
  },
  
  "环境参数扫描": {
    "房间大小_m2": [[3, 3], [5, 5], [8, 8], [10, 10]],
    "障碍物密度": [0.0, 0.1, 0.3, 0.5],
    "墙体材质": ["木质", "混凝土", "金属"]
  },
  
  "训练超参数": {
    "批次大小": 64,
    "初始学习率": 1e-3,
    "权重衰减": 1e-4,
    "最大训练轮次": 200,
    "早停耐心值": 20,
    "学习率调度": "余弦退火",
    "优化器": "Adam",
    "梯度裁剪": 1.0
  },
  
  "置信度正则化": {
    "正则化系数候选": [1e-4, 5e-4, 1e-3, 5e-3, 1e-2],
    "调优方法": "网格搜索",
    "验证指标": "ECE + Brier分数",
    "目标ECE": 0.05
  },
  
  "验收标准": {
    "最小F1阈值": 0.75,
    "Enhanced模型优势": "≥3%相对提升",
    "鲁棒性要求": "CV < 5%",
    "统计显著性": "p < 0.05",
    "置信度校准": "ECE < 0.05"
  },
  
  "输出配置": {
    "保存检查点": true,
    "保存注意力权重": true,
    "生成可视化": true,
    "输出格式": ["JSON", "CSV", "NPZ"],
    "结果目录": "experiments/results/d2_protocol/"
  },
  
  "资源限制": {
    "最大GPU内存_GB": 24,
    "最大训练时间_小时": 72,
    "最大存储空间_GB": 100,
    "CPU核心数": 16
  },
  
  "质量控制": {
    "数据完整性检查": true,
    "模型参数验证": true,
    "结果一致性检查": true,
    "统计检验": "配对t检验 + Wilcoxon符号秩检验",
    "多重比较校正": "Bonferroni校正"
  }
}